<UserControl x:Class="SHC_Rebalancer.ResourcesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SHC_Rebalancer"
             xmlns:se="clr-namespace:StswExpress;assembly=StswExpress"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance local:ResourcesContext}">

    <DockPanel>
        <!-- configs -->
        <se:StswLabel DockPanel.Dock="Top" Content="Selected config to apply:" FontWeight="Bold" Margin="3 6 3 0"/>
        <local:ConfigBox DockPanel.Dock="Top"
                         ItemsSource="{Binding Configs_resources}"
                         SelectedItem="{Binding SelectedConfig, Mode=OneWayToSource}"
                         SelectedValue="{Binding ConfigName_resources, Mode=OneWay, Source={x:Static local:Settings.Default}}"
                         Type="Resources"/>
        <!-- data -->
        <se:StswDataGrid Background="#3777"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         FrozenColumnCount="2"
                         IsReadOnly="{Binding ConfigName_resources, Source={x:Static local:Settings.Default}, Converter={x:Static se:StswCompareConverter.Instance}, ConverterParameter=vanilla}"
                         ItemsSource="{Binding SelectedConfig.View}"
                         Margin="3">
            <se:StswDataGrid.Columns>
                <DataGridTemplateColumn SortMemberPath="Key">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image MaxHeight="24" MaxWidth="24" Source="{Binding Key, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding Name}" FontWeight="Bold" IsReadOnly="True">
                    <DataGridTextColumn.Header>
                        <se:StswLabel Content="Name"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <se:StswDataGridDecimalColumn Binding="{Binding Buy}">
                    <se:StswDataGridDecimalColumn.Header>
                        <se:StswLabel Content="Buy value" IconSource="/Images/resources/Gold.png"/>
                    </se:StswDataGridDecimalColumn.Header>
                </se:StswDataGridDecimalColumn>
                <se:StswDataGridDecimalColumn Binding="{Binding Sell}">
                    <se:StswDataGridDecimalColumn.Header>
                        <se:StswLabel Content="Sell value" IconSource="/Images/resources/Gold.png"/>
                    </se:StswDataGridDecimalColumn.Header>
                </se:StswDataGridDecimalColumn>
            </se:StswDataGrid.Columns>
        </se:StswDataGrid>
    </DockPanel>
</UserControl>
