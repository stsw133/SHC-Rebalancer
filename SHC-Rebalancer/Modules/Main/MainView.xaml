<UserControl x:Class="SHC_Rebalancer.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SHC_Rebalancer"
             xmlns:se="clr-namespace:StswExpress;assembly=StswExpress"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance local:MainContext}">
    <UserControl.Background>
        <ImageBrush ImageSource="/Resources/background.jpg" Opacity="0.2"/>
    </UserControl.Background>

    <DockPanel>
        <!-- buttons panel -->
        <se:StswDirectionView DockPanel.Dock="Bottom" Background="{DynamicResource StswWindow.Static.Background}" BBtnThickness="0 0 1 0" FBtnThickness="1 0 0 0" Orientation="Horizontal">
            <UniformGrid HorizontalAlignment="Center" Rows="1">
                <se:StswButton Command="{Binding SaveChangesCommand}" Margin="3" Padding="10 3">
                    <se:StswLabel Content="Save changes" IconData="{x:Static se:StswIcons.ContentSave}" IconFill="{DynamicResource StswColor.Modify}"/>
                </se:StswButton>
                <se:StswButton Command="{Binding InstallCommand}" Margin="3" Padding="10 3">
                    <se:StswLabel Content="Install" IconData="{x:Static se:StswIcons.Play}" IconFill="{DynamicResource StswColor.Positive}"/>
                </se:StswButton>
                <se:StswButton Command="{Binding UninstallCommand}" Margin="3" Padding="10 3">
                    <se:StswLabel Content="Uninstall" IconData="{x:Static se:StswIcons.TrashCan}" IconFill="{DynamicResource StswColor.Negative}"/>
                </se:StswButton>
            </UniformGrid>
        </se:StswDirectionView>
        <se:StswSeparator DockPanel.Dock="Bottom" Orientation="Horizontal"/>
        <!-- rebalancer configuration -->
        <se:StswTabControl AreTabsVisible="True" Background="Transparent" BorderThickness="0 1 0 0">
            <!-- main -->
            <se:StswTabItem>
                <se:StswTabItem.Header>
                    <se:StswLabel Content="Main" IconData="{x:Static se:StswIcons.Cog}"/>
                </se:StswTabItem.Header>

                <se:StswScrollView>
                    <StackPanel>
                        <se:StswLabel Content="Stronghold Crusader:" FontWeight="Bold" Margin="3 6 3 0"/>
                        <se:StswPathPicker Filter="Stronghold Crusader|*.exe"
                                           Margin="3"
                                           Placeholder="Please select Stronghold Crusader .exe path..."
                                           SelectedPath="{Binding CrusaderPath, Source={x:Static local:Settings.Default}}"/>

                        <se:StswLabel Content="Stronghold Crusader Extreme:" FontWeight="Bold" Margin="3 6 3 0"/>
                        <se:StswPathPicker Filter="Stronghold Crusader Extreme|*.exe"
                                           Margin="3"
                                           Placeholder="Please select Stronghold Crusader Extreme .exe path..."
                                           SelectedPath="{Binding ExtremePath, Source={x:Static local:Settings.Default}}"/>

                        <se:StswLabel Content="Selected rebalance config to apply:" FontWeight="Bold" Margin="3 6 3 0"/>
                        <se:StswComboBox DisplayMemberPath="Key"
                                         IsEditable="True"
                                         ItemsSource="{Binding Source={x:Static local:Storage.Rebalances}}"
                                         Margin="3"
                                         Placeholder="Please select rebalance config to apply..."
                                         SelectedValue="{Binding SelectedRebalance}"
                                         SelectedValuePath="Value"
                                         Text="{Binding RebalanceName, Source={x:Static local:Settings.Default}}">
                            <se:StswComboBox.SubControls>
                                <se:StswSubButton Command="{Binding ReloadRebalancesCommand}"
                                                  CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type se:StswComboBox}}}"
                                                  IconData="{x:Static se:StswIcons.Refresh}"
                                                  IconFill="{DynamicResource StswColor.Neutral}"
                                                  Padding="0 0 3 0"/>
                                <se:StswSubButton Command="{Binding EditRebalanceCommand}"
                                                  CommandParameter="{Binding Text, RelativeSource={RelativeSource AncestorType={x:Type se:StswComboBox}}}"
                                                  IconData="{x:Static se:StswIcons.Pencil}"
                                                  IconFill="{DynamicResource StswColor.Positive}"
                                                  Padding="0 0 3 0"/>
                                <se:StswSubButton Command="{Binding RemoveRebalanceCommand}"
                                                  CommandParameter="{Binding Text, RelativeSource={RelativeSource AncestorType={x:Type se:StswComboBox}}}"
                                                  IconData="{x:Static se:StswIcons.TrashCan}"
                                                  IconFill="{DynamicResource StswColor.Negative}"
                                                  Padding="0 0 3 0"/>
                            </se:StswComboBox.SubControls>
                        </se:StswComboBox>
                    </StackPanel>
                </se:StswScrollView>
            </se:StswTabItem>
            <!-- bugfixes -->
            <se:StswTabItem Visibility="Collapsed">
                <se:StswTabItem.Header>
                    <se:StswLabel Content="Bugfixes" IconData="{x:Static se:StswIcons.Tools}"/>
                </se:StswTabItem.Header>


            </se:StswTabItem>
            <!-- ai -->
            <se:StswTabItem Visibility="Collapsed">
                <se:StswTabItem.Header>
                    <se:StswLabel Content="AI" IconData="{x:Static se:StswIcons.Alien}"/>
                </se:StswTabItem.Header>


            </se:StswTabItem>
            <!-- starting goods -->
            <se:StswTabItem Visibility="Collapsed">
                <se:StswTabItem.Header>
                    <se:StswLabel Content="Starting goods" IconData="{x:Static se:StswIcons.ContainStart}"/>
                </se:StswTabItem.Header>


            </se:StswTabItem>
            <!-- buildings -->
            <se:StswTabItem>
                <se:StswTabItem.Header>
                    <se:StswLabel Content="Buildings" IconData="{x:Static se:StswIcons.Castle}"/>
                </se:StswTabItem.Header>

                <se:StswDataGrid Background="#3777"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="False"
                                 FrozenColumnCount="2"
                                 IsReadOnly="{Binding RebalanceName, Source={x:Static local:Settings.Default}, Converter={x:Static se:StswCompareConverter.Instance}, ConverterParameter=vanilla}"
                                 ItemsSource="{Binding SelectedRebalance.BuildingsView}"
                                 Margin="5">
                    <se:StswDataGrid.Columns>
                        <DataGridTemplateColumn SortMemberPath="Key">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image MaxHeight="48" MaxWidth="48" Source="{Binding Key, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Binding="{Binding Name}" FontWeight="Bold" IsReadOnly="True">
                            <DataGridTextColumn.Header>
                                <se:StswLabel Content="Name"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        <se:StswDataGridDecimalColumn Binding="{Binding Cost[0]}">
                            <se:StswDataGridDecimalColumn.Header>
                                <se:StswLabel Content="Wood cost" IconSource="/Resources/resources/Wood.png"/>
                            </se:StswDataGridDecimalColumn.Header>
                        </se:StswDataGridDecimalColumn>
                        <se:StswDataGridDecimalColumn Binding="{Binding Cost[1]}">
                            <se:StswDataGridDecimalColumn.Header>
                                <se:StswLabel Content="Stone cost" IconSource="/Resources/resources/Stone.png"/>
                            </se:StswDataGridDecimalColumn.Header>
                        </se:StswDataGridDecimalColumn>
                        <se:StswDataGridDecimalColumn Binding="{Binding Cost[2]}">
                            <se:StswDataGridDecimalColumn.Header>
                                <se:StswLabel Content="Iron cost" IconSource="/Resources/resources/Iron.png"/>
                            </se:StswDataGridDecimalColumn.Header>
                        </se:StswDataGridDecimalColumn>
                        <se:StswDataGridDecimalColumn Binding="{Binding Cost[3]}">
                            <se:StswDataGridDecimalColumn.Header>
                                <se:StswLabel Content="Pitch cost" IconSource="/Resources/resources/Pitch.png"/>
                            </se:StswDataGridDecimalColumn.Header>
                        </se:StswDataGridDecimalColumn>
                        <se:StswDataGridDecimalColumn Binding="{Binding Cost[4]}">
                            <se:StswDataGridDecimalColumn.Header>
                                <se:StswLabel Content="Gold cost" IconSource="/Resources/resources/Gold.png"/>
                            </se:StswDataGridDecimalColumn.Header>
                        </se:StswDataGridDecimalColumn>
                        <se:StswDataGridDecimalColumn Binding="{Binding Health}">
                            <se:StswDataGridDecimalColumn.Header>
                                <se:StswLabel Content="Health" IconData="{x:Static se:StswIcons.Heart}" IconFill="{DynamicResource StswDialog.Error.Background}"/>
                            </se:StswDataGridDecimalColumn.Header>
                        </se:StswDataGridDecimalColumn>
                        <se:StswDataGridDecimalColumn Binding="{Binding Housing}">
                            <se:StswDataGridDecimalColumn.Header>
                                <se:StswLabel Content="Housing" IconData="{x:Static se:StswIcons.Home}" IconFill="{DynamicResource StswDialog.None.Background}"/>
                            </se:StswDataGridDecimalColumn.Header>
                        </se:StswDataGridDecimalColumn>
                    </se:StswDataGrid.Columns>
                </se:StswDataGrid>
            </se:StswTabItem>
            <!-- resources -->
            <se:StswTabItem>
                <se:StswTabItem.Header>
                    <se:StswLabel Content="Resources" IconData="{x:Static se:StswIcons.PackageVariant}"/>
                </se:StswTabItem.Header>

                <se:StswDataGrid Background="#3777"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="False"
                                 FrozenColumnCount="2"
                                 IsReadOnly="{Binding RebalanceName, Source={x:Static local:Settings.Default}, Converter={x:Static se:StswCompareConverter.Instance}, ConverterParameter=vanilla}"
                                 ItemsSource="{Binding SelectedRebalance.ResourcesView}"
                                 Margin="5">
                    <se:StswDataGrid.Columns>
                        <DataGridTemplateColumn SortMemberPath="Key">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image MaxHeight="24" MaxWidth="24" Source="{Binding Key, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Binding="{Binding Name}" FontWeight="Bold" IsReadOnly="True">
                            <DataGridTextColumn.Header>
                                <se:StswLabel Content="Name"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        <se:StswDataGridDecimalColumn Binding="{Binding Buy}">
                            <se:StswDataGridDecimalColumn.Header>
                                <se:StswLabel Content="Buy value" IconSource="/Resources/resources/Gold.png"/>
                            </se:StswDataGridDecimalColumn.Header>
                        </se:StswDataGridDecimalColumn>
                        <se:StswDataGridDecimalColumn Binding="{Binding Sell}">
                            <se:StswDataGridDecimalColumn.Header>
                                <se:StswLabel Content="Sell value" IconSource="/Resources/resources/Gold.png"/>
                            </se:StswDataGridDecimalColumn.Header>
                        </se:StswDataGridDecimalColumn>
                        <se:StswDataGridDecimalColumn Binding="{Binding SellRatio, StringFormat=0%, Mode=OneWay}" IsReadOnly="True">
                            <se:StswDataGridDecimalColumn.Header>
                                <se:StswLabel Content="Sell ratio" IconData="{x:Static se:StswIcons.Percent}" IconFill="{DynamicResource StswDialog.None.Background}"/>
                            </se:StswDataGridDecimalColumn.Header>
                        </se:StswDataGridDecimalColumn>
                    </se:StswDataGrid.Columns>
                </se:StswDataGrid>
            </se:StswTabItem>
            <!-- units -->
            <se:StswTabItem>
                <se:StswTabItem.Header>
                    <se:StswLabel Content="Units" IconData="{x:Static se:StswIcons.AccountGroup}"/>
                </se:StswTabItem.Header>

                <se:StswDataGrid Background="#3777"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="False"
                                 FrozenColumnCount="2"
                                 IsReadOnly="{Binding RebalanceName, Source={x:Static local:Settings.Default}, Converter={x:Static se:StswCompareConverter.Instance}, ConverterParameter=vanilla}"
                                 ItemsSource="{Binding SelectedRebalance.UnitsView}"
                                 Margin="5">
                    <se:StswDataGrid.Columns>
                        <DataGridTemplateColumn SortMemberPath="Key">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image MaxHeight="36" MaxWidth="36" Source="{Binding Key, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Binding="{Binding Name}" FontWeight="Bold" IsReadOnly="True">
                            <DataGridTextColumn.Header>
                                <se:StswLabel Content="Name"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        <se:StswDataGridDecimalColumn Binding="{Binding Health}">
                            <se:StswDataGridDecimalColumn.Header>
                                <se:StswLabel Content="Health" IconData="{x:Static se:StswIcons.Heart}" IconFill="{DynamicResource StswDialog.Error.Background}"/>
                            </se:StswDataGridDecimalColumn.Header>
                        </se:StswDataGridDecimalColumn>
                        <se:StswDataGridDecimalColumn Binding="{Binding DamageFromBow}">
                            <se:StswDataGridDecimalColumn.Header>
                                <se:StswLabel Content="Damage from bow" IconSource="/Resources/units/EuropArcher.png"/>
                            </se:StswDataGridDecimalColumn.Header>
                        </se:StswDataGridDecimalColumn>
                        <se:StswDataGridDecimalColumn Binding="{Binding DamageFromCrossbow}">
                            <se:StswDataGridDecimalColumn.Header>
                                <se:StswLabel Content="Damage from crossbow" IconSource="/Resources/units/Crossbowman.png"/>
                            </se:StswDataGridDecimalColumn.Header>
                        </se:StswDataGridDecimalColumn>
                        <se:StswDataGridDecimalColumn Binding="{Binding DamageFromSling}">
                            <se:StswDataGridDecimalColumn.Header>
                                <se:StswLabel Content="Damage from sling" IconSource="/Resources/units/Slinger.png"/>
                            </se:StswDataGridDecimalColumn.Header>
                        </se:StswDataGridDecimalColumn>
                        <se:StswDataGridDecimalColumn Binding="{Binding Speed}">
                            <se:StswDataGridDecimalColumn.Header>
                                <se:StswLabel Content="Speed" IconData="{x:Static se:StswIcons.RunFast}" IconFill="{DynamicResource StswDialog.Success.Background}"/>
                            </se:StswDataGridDecimalColumn.Header>
                        </se:StswDataGridDecimalColumn>
                        <se:StswDataGridDecimalColumn Binding="{Binding MeleeDamage}">
                            <se:StswDataGridDecimalColumn.Header>
                                <se:StswLabel Content="Melee damage" IconData="{x:Static se:StswIcons.SwordCross}" IconFill="{DynamicResource StswDialog.Error.Background}"/>
                            </se:StswDataGridDecimalColumn.Header>
                        </se:StswDataGridDecimalColumn>
                        <se:StswDataGridCheckColumn Binding="{Binding CanMeleeDamage}">
                            <se:StswDataGridCheckColumn.Header>
                                <se:StswLabel Content="Can melee damage" IconData="{x:Static se:StswIcons.Sword}" IconFill="{DynamicResource StswDialog.Question.Background}"/>
                            </se:StswDataGridCheckColumn.Header>
                        </se:StswDataGridCheckColumn>
                        <se:StswDataGridCheckColumn Binding="{Binding CanClimbLadder}">
                            <se:StswDataGridCheckColumn.Header>
                                <se:StswLabel Content="Can climb ladder" IconData="{x:Static se:StswIcons.Ladder}" IconFill="{DynamicResource StswDialog.Question.Background}"/>
                            </se:StswDataGridCheckColumn.Header>
                        </se:StswDataGridCheckColumn>
                        <se:StswDataGridCheckColumn Binding="{Binding CanGoOnWall}">
                            <se:StswDataGridCheckColumn.Header>
                                <se:StswLabel Content="Can go on wall" IconData="{x:Static se:StswIcons.Wall}" IconFill="{DynamicResource StswDialog.Question.Background}"/>
                            </se:StswDataGridCheckColumn.Header>
                        </se:StswDataGridCheckColumn>
                        <se:StswDataGridCheckColumn Binding="{Binding CanBeMoved}">
                            <se:StswDataGridCheckColumn.Header>
                                <se:StswLabel Content="Can be moved" IconData="{x:Static se:StswIcons.CursorMove}" IconFill="{DynamicResource StswDialog.Question.Background}"/>
                            </se:StswDataGridCheckColumn.Header>
                        </se:StswDataGridCheckColumn>
                    </se:StswDataGrid.Columns>
<!--
                    <se:StswDataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <se:StswDataGrid CanUserAddRows="False"
                                             CanUserDeleteRows="False"
                                             FrozenColumnCount="1"
                                             IsReadOnly="{Binding RebalanceName, Source={x:Static local:Settings.Default}, Converter={x:Static se:StswCompareConverter.Instance}, ConverterParameter=vanilla}"
                                             ItemsSource="{Binding MeleeDamageVs}">
                                <DataGridTemplateColumn SortMemberPath="Key">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image MaxHeight="36" MaxWidth="36" Source="{Binding Key, Converter={x:Static local:EnumToImageSourceConverter.Instance}}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <se:StswDataGridDecimalColumn Binding="{Binding Value}">
                                    <se:StswDataGridDecimalColumn.Header>
                                        <se:StswLabel Content="Damage" IconData="{x:Static se:StswIcons.SwordCross}" IconFill="{DynamicResource StswDialog.Error.Background}"/>
                                    </se:StswDataGridDecimalColumn.Header>
                                </se:StswDataGridDecimalColumn>
                            </se:StswDataGrid>
                        </DataTemplate>
                    </se:StswDataGrid.RowDetailsTemplate>
-->
                </se:StswDataGrid>
            </se:StswTabItem>
            <!-- skirmish trail -->
            <se:StswTabItem>
                <se:StswTabItem.Header>
                    <se:StswLabel Content="Skirmish trail" IconData="{x:Static se:StswIcons.Map}"/>
                </se:StswTabItem.Header>

                <se:StswDataGrid Background="#3777"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="False"
                                 FrozenColumnCount="1"
                                 IsReadOnly="{Binding RebalanceName, Source={x:Static local:Settings.Default}, Converter={x:Static se:StswCompareConverter.Instance}, ConverterParameter=vanilla}"
                                 ItemsSource="{Binding SelectedRebalance.SkirmishTrailView}"
                                 Margin="5">
                    <se:StswDataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Key}" FontWeight="Bold" IsReadOnly="True">
                            <DataGridTextColumn.Header>
                                <se:StswLabel Content="Mission №"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        <se:StswDataGridTextColumn Binding="{Binding MapNameAddress}">
                            <se:StswDataGridTextColumn.Header>
                                <se:StswLabel Content="Map name address" IconData="{x:Static se:StswIcons.MapMarker}"/>
                            </se:StswDataGridTextColumn.Header>
                        </se:StswDataGridTextColumn>
                        <se:StswDataGridTextColumn Binding="{Binding MapName}">
                            <se:StswDataGridTextColumn.Header>
                                <se:StswLabel Content="Map name" IconData="{x:Static se:StswIcons.Map}"/>
                            </se:StswDataGridTextColumn.Header>
                        </se:StswDataGridTextColumn>
                        <se:StswDataGridComboColumn SelectedValueBinding="{Binding Difficulty}">
                            <se:StswDataGridComboColumn.Header>
                                <se:StswLabel Content="Difficulty" IconData="{x:Static se:StswIcons.DecimalIncrease}"/>
                            </se:StswDataGridComboColumn.Header>
                            <se:StswDataGridComboColumn.ItemsSource>
                                <x:Array Type="{x:Type sys:Int32}" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                    <sys:Int32>1</sys:Int32>
                                    <sys:Int32>2</sys:Int32>
                                    <sys:Int32>3</sys:Int32>
                                    <sys:Int32>4</sys:Int32>
                                    <sys:Int32>5</sys:Int32>
                                </x:Array>
                            </se:StswDataGridComboColumn.ItemsSource>
                        </se:StswDataGridComboColumn>
                        <se:StswDataGridComboColumn ItemsSource="{se:StswEnumToList local:SkirmishMode}" SelectedValueBinding="{Binding Type}">
                            <se:StswDataGridComboColumn.Header>
                                <se:StswLabel Content="Type" IconData="{x:Static se:StswIcons.SwordCross}"/>
                            </se:StswDataGridComboColumn.Header>
                        </se:StswDataGridComboColumn>
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.Header>
                                <se:StswLabel Content="AIs"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel DataContext="{Binding AIs}" Orientation="Horizontal">
                                        <se:StswComboBox ItemsSource="{se:StswEnumToList local:AI}" Padding="0" SelectedValue="{Binding [0]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed">
                                            <se:StswComboBox.Background>
                                                <ImageBrush ImageSource="/Resources/colors/Red.png" Stretch="None"/>
                                            </se:StswComboBox.Background>
                                            <se:StswComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Height="36" Width="36" Source="{Binding Value, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                                                </DataTemplate>
                                            </se:StswComboBox.ItemTemplate>
                                        </se:StswComboBox>
                                        <se:StswComboBox ItemsSource="{se:StswEnumToList local:AI}" Padding="0" SelectedValue="{Binding [1]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed">
                                            <se:StswComboBox.Background>
                                                <ImageBrush ImageSource="/Resources/colors/Orange.png" Stretch="None"/>
                                            </se:StswComboBox.Background>
                                            <se:StswComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Height="36" Width="36" Source="{Binding Value, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                                                </DataTemplate>
                                            </se:StswComboBox.ItemTemplate>
                                        </se:StswComboBox>
                                        <se:StswComboBox ItemsSource="{se:StswEnumToList local:AI}" Padding="0" SelectedValue="{Binding [2]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed">
                                            <se:StswComboBox.Background>
                                                <ImageBrush ImageSource="/Resources/colors/Yellow.png" Stretch="None"/>
                                            </se:StswComboBox.Background>
                                            <se:StswComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Height="36" Width="36" Source="{Binding Value, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                                                </DataTemplate>
                                            </se:StswComboBox.ItemTemplate>
                                        </se:StswComboBox>
                                        <se:StswComboBox ItemsSource="{se:StswEnumToList local:AI}" Padding="0" SelectedValue="{Binding [3]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed">
                                            <se:StswComboBox.Background>
                                                <ImageBrush ImageSource="/Resources/colors/Blue.png" Stretch="None"/>
                                            </se:StswComboBox.Background>
                                            <se:StswComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Height="36" Width="36" Source="{Binding Value, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                                                </DataTemplate>
                                            </se:StswComboBox.ItemTemplate>
                                        </se:StswComboBox>
                                        <se:StswComboBox ItemsSource="{se:StswEnumToList local:AI}" Padding="0" SelectedValue="{Binding [4]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed">
                                            <se:StswComboBox.Background>
                                                <ImageBrush ImageSource="/Resources/colors/Gray.png" Stretch="None"/>
                                            </se:StswComboBox.Background>
                                            <se:StswComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Height="36" Width="36" Source="{Binding Value, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                                                </DataTemplate>
                                            </se:StswComboBox.ItemTemplate>
                                        </se:StswComboBox>
                                        <se:StswComboBox ItemsSource="{se:StswEnumToList local:AI}" Padding="0" SelectedValue="{Binding [5]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed">
                                            <se:StswComboBox.Background>
                                                <ImageBrush ImageSource="/Resources/colors/Purple.png" Stretch="None"/>
                                            </se:StswComboBox.Background>
                                            <se:StswComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Height="36" Width="36" Source="{Binding Value, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                                                </DataTemplate>
                                            </se:StswComboBox.ItemTemplate>
                                        </se:StswComboBox>
                                        <se:StswComboBox ItemsSource="{se:StswEnumToList local:AI}" Padding="0" SelectedValue="{Binding [6]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed">
                                            <se:StswComboBox.Background>
                                                <ImageBrush ImageSource="/Resources/colors/Cyan.png" Stretch="None"/>
                                            </se:StswComboBox.Background>
                                            <se:StswComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Height="36" Width="36"  Source="{Binding Value, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                                                </DataTemplate>
                                            </se:StswComboBox.ItemTemplate>
                                        </se:StswComboBox>
                                        <se:StswComboBox ItemsSource="{se:StswEnumToList local:AI}" Padding="0" SelectedValue="{Binding [7]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed">
                                            <se:StswComboBox.Background>
                                                <ImageBrush ImageSource="/Resources/colors/Green.png" Stretch="None"/>
                                            </se:StswComboBox.Background>
                                            <se:StswComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Height="36" Width="36" Source="{Binding Value, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                                                </DataTemplate>
                                            </se:StswComboBox.ItemTemplate>
                                        </se:StswComboBox>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.Header>
                                <se:StswLabel Content="Locations"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel DataContext="{Binding Locations}" Orientation="Horizontal">
                                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswListFromRangeConverter.Instance}, ConverterParameter=9}" SelectedValue="{Binding [0]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed"/>
                                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswListFromRangeConverter.Instance}, ConverterParameter=9}" SelectedValue="{Binding [1]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed"/>
                                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswListFromRangeConverter.Instance}, ConverterParameter=9}" SelectedValue="{Binding [2]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed"/>
                                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswListFromRangeConverter.Instance}, ConverterParameter=9}" SelectedValue="{Binding [3]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed"/>
                                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswListFromRangeConverter.Instance}, ConverterParameter=9}" SelectedValue="{Binding [4]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed"/>
                                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswListFromRangeConverter.Instance}, ConverterParameter=9}" SelectedValue="{Binding [5]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed"/>
                                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswListFromRangeConverter.Instance}, ConverterParameter=9}" SelectedValue="{Binding [6]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed"/>
                                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswListFromRangeConverter.Instance}, ConverterParameter=9}" SelectedValue="{Binding [7]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.Header>
                                <se:StswLabel Content="Teams"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel DataContext="{Binding Teams}" Orientation="Horizontal">
                                        <se:StswComboBox ItemsSource="{se:StswEnumToList local:SkirmishTeam}" SelectedValue="{Binding [0]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed">
                                            <se:StswComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Height="16" Width="14" Source="{Binding Value, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                                                </DataTemplate>
                                            </se:StswComboBox.ItemTemplate>
                                        </se:StswComboBox>
                                        <se:StswComboBox ItemsSource="{se:StswEnumToList local:SkirmishTeam}" SelectedValue="{Binding [1]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed">
                                            <se:StswComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Height="16" Width="14" Source="{Binding Value, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                                                </DataTemplate>
                                            </se:StswComboBox.ItemTemplate>
                                        </se:StswComboBox>
                                        <se:StswComboBox ItemsSource="{se:StswEnumToList local:SkirmishTeam}" SelectedValue="{Binding [2]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed">
                                            <se:StswComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Height="16" Width="14" Source="{Binding Value, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                                                </DataTemplate>
                                            </se:StswComboBox.ItemTemplate>
                                        </se:StswComboBox>
                                        <se:StswComboBox ItemsSource="{se:StswEnumToList local:SkirmishTeam}" SelectedValue="{Binding [3]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed">
                                            <se:StswComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Height="16" Width="14" Source="{Binding Value, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                                                </DataTemplate>
                                            </se:StswComboBox.ItemTemplate>
                                        </se:StswComboBox>
                                        <se:StswComboBox ItemsSource="{se:StswEnumToList local:SkirmishTeam}" SelectedValue="{Binding [4]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed">
                                            <se:StswComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Height="16" Width="14" Source="{Binding Value, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                                                </DataTemplate>
                                            </se:StswComboBox.ItemTemplate>
                                        </se:StswComboBox>
                                        <se:StswComboBox ItemsSource="{se:StswEnumToList local:SkirmishTeam}" SelectedValue="{Binding [5]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed">
                                            <se:StswComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Height="16" Width="14" Source="{Binding Value, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                                                </DataTemplate>
                                            </se:StswComboBox.ItemTemplate>
                                        </se:StswComboBox>
                                        <se:StswComboBox ItemsSource="{se:StswEnumToList local:SkirmishTeam}" SelectedValue="{Binding [6]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed">
                                            <se:StswComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Height="16" Width="14" Source="{Binding Value, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                                                </DataTemplate>
                                            </se:StswComboBox.ItemTemplate>
                                        </se:StswComboBox>
                                        <se:StswComboBox ItemsSource="{se:StswEnumToList local:SkirmishTeam}" SelectedValue="{Binding [7]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed">
                                            <se:StswComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Image Height="16" Width="14" Source="{Binding Value, Converter={x:Static local:EnumToImageSourceConverter.Instance}}" StretchDirection="DownOnly"/>
                                                </DataTemplate>
                                            </se:StswComboBox.ItemTemplate>
                                        </se:StswComboBox>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.Header>
                                <se:StswLabel Content="AIVs"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel DataContext="{Binding AIVs}" Orientation="Horizontal">
                                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswListFromRangeConverter.Instance}, ConverterParameter=8}" SelectedValue="{Binding [0]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed"/>
                                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswListFromRangeConverter.Instance}, ConverterParameter=8}" SelectedValue="{Binding [1]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed"/>
                                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswListFromRangeConverter.Instance}, ConverterParameter=8}" SelectedValue="{Binding [2]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed"/>
                                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswListFromRangeConverter.Instance}, ConverterParameter=8}" SelectedValue="{Binding [3]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed"/>
                                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswListFromRangeConverter.Instance}, ConverterParameter=8}" SelectedValue="{Binding [4]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed"/>
                                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswListFromRangeConverter.Instance}, ConverterParameter=8}" SelectedValue="{Binding [5]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed"/>
                                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswListFromRangeConverter.Instance}, ConverterParameter=8}" SelectedValue="{Binding [6]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed"/>
                                        <se:StswComboBox ItemsSource="{Binding Converter={x:Static se:StswListFromRangeConverter.Instance}, ConverterParameter=8}" SelectedValue="{Binding [7]}" VerticalAlignment="Stretch" se:StswControl.IsBorderless="True" se:StswDropArrow.Visibility="Collapsed"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </se:StswDataGrid.Columns>
                </se:StswDataGrid>
            </se:StswTabItem>
            <!-- other -->
            <se:StswTabItem>
                <se:StswTabItem.Header>
                    <se:StswLabel Content="Other" IconData="{x:Static se:StswIcons.ProgressQuestion}"/>
                </se:StswTabItem.Header>

                <se:StswDataGrid Background="#3777"
                                 FrozenColumnCount="2"
                                 IsReadOnly="{Binding RebalanceName, Source={x:Static local:Settings.Default}, Converter={x:Static se:StswCompareConverter.Instance}, ConverterParameter=vanilla}"
                                 ItemsSource="{Binding SelectedRebalance.Other}"
                                 Margin="5">
                    <se:StswDataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Key}" FontWeight="Bold" IsReadOnly="True">
                            <DataGridTextColumn.Header>
                                <se:StswLabel Content="Key"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        <se:StswDataGridTextColumn Binding="{Binding Address}">
                            <se:StswDataGridTextColumn.Header>
                                <se:StswLabel Content="Address"/>
                            </se:StswDataGridTextColumn.Header>
                        </se:StswDataGridTextColumn>
                        <se:StswDataGridDecimalColumn Binding="{Binding Size}">
                            <se:StswDataGridDecimalColumn.Header>
                                <se:StswLabel Content="Size"/>
                            </se:StswDataGridDecimalColumn.Header>
                        </se:StswDataGridDecimalColumn>
                        <se:StswDataGridTextColumn Binding="{Binding Value}">
                            <se:StswDataGridTextColumn.Header>
                                <se:StswLabel Content="Value"/>
                            </se:StswDataGridTextColumn.Header>
                        </se:StswDataGridTextColumn>
                        <se:StswDataGridComboColumn ItemsSource="{se:StswEnumToList local:GameVersion}" SelectedValueBinding="{Binding Version}">
                            <se:StswDataGridComboColumn.Header>
                                <se:StswLabel Content="Version"/>
                            </se:StswDataGridComboColumn.Header>
                        </se:StswDataGridComboColumn>
                        <se:StswDataGridTextColumn Binding="{Binding Description}">
                            <se:StswDataGridTextColumn.Header>
                                <se:StswLabel Content="Description"/>
                            </se:StswDataGridTextColumn.Header>
                        </se:StswDataGridTextColumn>
                    </se:StswDataGrid.Columns>
                </se:StswDataGrid>
            </se:StswTabItem>
            <!-- finder -->
            <se:StswTabItem>
                <se:StswTabItem.Header>
                    <se:StswLabel Content="Finder" IconData="{x:Static se:StswIcons.Magnify}"/>
                </se:StswTabItem.Header>

                <DockPanel Margin="-3">
                    <se:StswDataGrid BorderThickness="0 0 1 0"
                                     IsReadOnly="True"
                                     ItemsSource="{Binding FinderResults}"
                                     SelectionUnit="Cell"
                                     Width="200">

                        <se:StswDataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Address}" FontSize="11" Header="Address" Width="*"/>
                            <se:StswDataGridDecimalColumn Binding="{Binding Value}" FontSize="11" Header="Value" Width="*"/>
                        </se:StswDataGrid.Columns>

                        <se:StswDataGrid.CellStyle>
                            <Style TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource StswDataGridCellStyle}">
                                <Setter Property="Margin" Value="-0.5"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsInConfigFile}" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource StswDialog.Warning.Subground}"/>
                                    </DataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsInConfigFile}" Value="True"/>
                                            <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background" Value="{DynamicResource StswDialog.Warning.Border}"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </se:StswDataGrid.CellStyle>
                    </se:StswDataGrid>

                    <se:StswLabelPanel LabelFontWeight="Bold" LabelHorizontalAlignment="Right" Margin="3" Orientation="Horizontal">
                        <se:StswLabel Content="Game type:"/>
                        <se:StswComboBox ItemsSource="{se:StswEnumToList local:GameVersion}"
                                         Margin="3"
                                         Placeholder="Select Stronghold game to search through..."
                                         SelectedValue="{Binding FinderFilterType}"/>

                        <se:StswLabel Content="Size:"/>
                        <StackPanel Margin="3" Orientation="Horizontal">
                            <se:StswRadioBox Content="byte"
                                             IsChecked="{Binding FinderFilterSize, Converter={x:Static se:StswRadioConverter.Instance}, ConverterParameter=1}"
                                             Margin="0 0 3 0"/>
                            <se:StswRadioBox Content="int"
                                             IsChecked="{Binding FinderFilterSize, Converter={x:Static se:StswRadioConverter.Instance}, ConverterParameter=4}"
                                             Margin="0 0 3 0"/>
                        </StackPanel>

                        <se:StswLabel Content="Address:"/>
                        <DockPanel IsEnabled="{Binding FinderFilterType, Converter={x:Static se:StswNotNullConverter.Instance}}">
                            <se:StswIntegerBox DockPanel.Dock="Right"
                                               Margin="3"
                                               Placeholder="Skip bytes..."
                                               Value="{Binding FinderFilterSkips}"
                                               Width="100"/>
                            <se:StswTextBox Margin="3"
                                            Placeholder="Initial address to find..."
                                            Text="{Binding FinderFilterAddress}"/>
                        </DockPanel>

                        <se:StswLabel Content="Values:"/>
                        <se:StswTextBox IsEnabled="{Binding FinderFilterType, Converter={x:Static se:StswNotNullConverter.Instance}}"
                                        Margin="3"
                                        Placeholder="Sequence of values to find... (separated by commas)"
                                        Text="{Binding FinderFilterValues}"/>
                    </se:StswLabelPanel>
                </DockPanel>
            </se:StswTabItem>
        </se:StswTabControl>
    </DockPanel>
</UserControl>
